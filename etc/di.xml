<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\App\Bootstrap">
        <plugin name="magezero_observability_register_datadog_hooks"
                type="MageZero\OpensearchObservability\Plugin\Apm\BootstrapTracingPlugin"
                sortOrder="1"/>
    </type>

    <type name="Magento\Framework\Logger\Handler\System">
        <plugin name="magezero_observability_mirror_system_logs"
                type="MageZero\OpensearchObservability\Plugin\Logger\HandlerMirrorPlugin"
                sortOrder="10"/>
    </type>

    <type name="Magento\Framework\Logger\Handler\Debug">
        <plugin name="magezero_observability_mirror_debug_logs"
                type="MageZero\OpensearchObservability\Plugin\Logger\HandlerMirrorPlugin"
                sortOrder="10"/>
    </type>

    <type name="Magento\Framework\Logger\Handler\Exception">
        <plugin name="magezero_observability_mirror_exception_logs"
                type="MageZero\OpensearchObservability\Plugin\Logger\HandlerMirrorPlugin"
                sortOrder="10"/>
    </type>
</config>
